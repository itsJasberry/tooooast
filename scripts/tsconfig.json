{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "../",
    "paths": {
      "*": ["*"],
      "@/*": ["src/*"]
    },
    "types": ["node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["../lib/**/*.ts", "../scripts/**/*.ts", "run-full-scraper.js"],
  "exclude": ["node_modules"]
}
